		<div class="container">
            <div class="row pic"><img src="./assets/img/burger.jpg" alt=""></div>
            <h3>Eat Da Burger!</h3>
            <div class="row">
                <div class="col">Burger to be devour
                    <ol>
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/burger-block devour=false}}
                            {{/unless}}
                        {{/each}}
                    </ol>
                </div>

                <div class="col">
                    <ul class="devBurger">
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/devBurger-block devoured=true}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="row">
                <form class="addBurger">
                    <div class="form-group">
                        <textarea class="form-control" id = "burger" name ="name"></textarea>
                        <button type = "submit" class ="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>